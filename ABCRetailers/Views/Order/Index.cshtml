@model List<ABCRetailers.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Order Management</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Order</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Product</th>
                <th>Order Date</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.Username</td>
                    <td>@order.ProductName</td>
                    <td>@order.OrderDate.ToLocalTime().ToString("d")</td>
                    <td>@order.Quantity</td>
                    <td class="text-success">$@order.TotalPrice.ToString("N2")</td>
                    <td>
                        @{
                            var badgeClass = order.Status switch
                            {
                                "Pending" => "bg-warning",
                                "Processing" => "bg-info",
                                "Completed" => "bg-success",
                                "Cancelled" => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @badgeClass">@order.Status</span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                        <a asp-action="Edit" asp-route-id="@order.OrderId" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal@(order.OrderId)">
                            <i class="fas fa-trash"></i>
                        </button>

                        <!-- Delete Confirmation Modal -->
                        <div class="modal fade" id="deleteModal@(order.OrderId)" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Confirm Delete</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete order #@order.OrderId?
                                    </div>
                                    <div class="modal-footer">
                                        <form asp-action="Delete" method="post">
                                            <input type="hidden" name="id" value="@order.OrderId" />
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
